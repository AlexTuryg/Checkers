        "BotScoringType": "NumberAndPotential", // Тип функции оценки позиции
        "BotDelayMS": 500, // Задержка между ходами бота в миллисекундах
        "NoRandom": false, // Отключить рандомный выбор ходов при равной оценке?
        "Optimization": "O1" // Уровень оптимизации алгоритма поиска (например, альфа-бета отсечение)
    },
    "Game": { // Настройки игры
        "MaxNumTurns": 120 // Максимальное количество ходов до объявления ничьей
