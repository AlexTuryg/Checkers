{
    "WindowSize": { // Размеры игрового окна
        "Width": 800, // Ширина окна
        "Height": 800 // Высота окна
    },
    "Bot": { // Настройки бота
        "IsWhiteBot": true, // Бот играет за белых?
        "IsBlackBot": true, // Бот играет за черных?
